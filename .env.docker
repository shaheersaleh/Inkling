# Docker environment variables
# Copy this file to .env for docker-compose

# Flask Configuration
SECRET_KEY=your-very-secure-secret-key-here-change-in-production
FLASK_ENV=production
FLASK_DEBUG=False

# Database
DATABASE_URL=sqlite:///instance/notes_app.db

# Google Cloud Vision API
# Place your google-credentials.json file in the project root
GOOGLE_APPLICATION_CREDENTIALS=/app/google-credentials.json

# Ollama Configuration (will connect to ollama container)
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Vector Database
VECTOR_DB_PATH=vector_db

# ChromaDB (if using separate service)
CHROMA_HOST=chromadb
CHROMA_PORT=8000
