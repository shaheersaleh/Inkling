# Environment variables for Notes App
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_DEBUG=True
PORT=5000

# Database
DATABASE_URL=sqlite:///notes_app.db

# Google Cloud Vision API
# Option 1: Use Application Default Credentials (recommended for local development)
# Run: gcloud auth application-default login
# No additional environment variables needed

# Option 2: Use API Key (alternative method)
GOOGLE_CLOUD_API_KEY=AIzaSyBZkVo48gZUPEdNtYNdeTyDL9aDGgsqFNs

# Option 3: Use Service Account Key (if you prefer this method)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Ollama Configuration (make sure Ollama is installed and running)
# Default model: llama3
# To install: ollama pull llama3

# Vector Database
# ChromaDB will use local storage in the vector_db directory

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
